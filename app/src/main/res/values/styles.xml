<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">-->
    <style name="MyActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@color/st_actionbar_bg_def</item>
        <item name="background">@color/st_actionbar_bg_def</item>
        <item name="android:titleTextStyle">@style/AppTheme.Theme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Theme.ActionBar.Subtitle</item>
        <item name="titleTextStyle">@style/AppTheme.Theme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/AppTheme.Theme.ActionBar.Subtitle</item>
    </style>

    <!--Title-->
    <style name="AppTheme.Theme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/st_actionbar_title</item>
    </style>

    <!--Subtitle-->
    <style name="AppTheme.Theme.ActionBar.Subtitle" parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/st_actionbar_subtitle</item>
    </style>

    <style name="ButtonMain">
        <item name="android:background">@drawable/st_button_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AvatarActivity" parent="Theme.Sherlock">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:actionBarStyle">@style/AppTheme.Photo.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.Photo.ActionBarStyle</item>
    </style>

    <style name="AppTheme.Photo.ActionBarStyle" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:background">#88000000</item>
        <item name="background">#88000000</item>
        <!--<item name="android:titleTextStyle">@style/AppTheme.Photo.ActionBar.TitleTextStyle</item>-->
        <!--<item name="android:subtitleTextStyle">@style/AppTheme.Photo.ActionBar.Subtitle</item>-->
        <!--<item name="titleTextStyle">@style/AppTheme.Photo.ActionBar.TitleTextStyle</item>-->
        <!--<item name="subtitleTextStyle">@style/AppTheme.Photo.ActionBar.Subtitle</item>-->
    </style>
</resources>
